@model Mission8.Models.TaskModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="jumbotron p-5 mb-4 bg-light border rounded-3 text-center shadow-sm">
        <h1 class="display-4">Welcome to the Task Manager</h1>
        <p class="lead">Based on Steven Covey’s "7 Habits of Highly Effective People."</p>
        <hr class="my-4">
        <p>Master your productivity by organizing your life into four quadrants of importance and urgency.</p>
        
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Home" asp-action="Tasks" class="btn btn-primary btn-lg px-4 shadow">
                <i class="bi bi-plus-circle"></i> Add New Task
            </a>

            <a asp-controller="Home" asp-action="Quadrants" class="btn btn-outline-secondary btn-lg px-4 shadow">
                <i class="bi bi-grid-3x3-gap"></i> View Quadrants
            </a>
        </div>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <h3>Organize</h3>
            <p class="text-muted">Break your list down into what actually matters.</p>
        </div>
        <div class="col-md-4">
            <h3>Prioritize</h3>
            <p class="text-muted">Focus on Quadrant II to prevent future crises.</p>
        </div>
        <div class="col-md-4">
            <h3>Succeed</h3>
            <p class="text-muted">Check off tasks and watch your matrix clear up.</p>
        </div>
    </div>
</div>