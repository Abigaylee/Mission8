@*
   Delete confirmation so the user can verify what they are doing
*@
@{
}
@model Mission8.Models.TaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the task: <strong>@Model.Task</strong>?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TaskId" />

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Quadrants" class="btn btn-secondary">Cancel</a>
</form>